<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="booking_VillageNewbies.Aluehallinta"
             Title="Aluehallinta">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">

            <Label Text="Alueen tiedot" FontSize="Large" HorizontalOptions="Center"/>

            <Entry x:Name="alueenNimi" Placeholder="Alueen nimi"/>

            <Picker x:Name="alueenMokit" Title="Mökit" WidthRequest="300"/>


            <Button Text="Lisää alue" Clicked="LisaaAlue_Clicked"/>

            <Picker x:Name="aluePicker" ItemsSource="{Binding AlueNimet}" Title="Valitse alue" WidthRequest="300"/>

            <Button Text="Poista alue" Clicked="PoistaAlue_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>