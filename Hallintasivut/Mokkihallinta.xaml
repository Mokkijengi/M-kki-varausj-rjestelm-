<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="booking_VillageNewbies.Mokkihallinta"
             Title="Mokkihallinta">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">

			<Label Text="Mökin tiedot" FontSize="Large" HorizontalOptions="Center"/>

			<Entry x:Name="mokkiID" Placeholder="Mökin ID" WidthRequest="300"/>

			<Entry x:Name="alueID" Placeholder="Alue ID"/>

			<Entry x:Name="postiNro" Placeholder="Postinumero"/>

			<Entry x:Name="mokinNimi" Placeholder="Mökin nimi"/>

			<Entry x:Name="katuOsoite" Placeholder="Katuosoite"/>

			<Entry x:Name="hinta" Placeholder="Hinta"/>

			<Editor x:Name="mokinKuvaus" Placeholder="Mökin kuvaus" AutoSize="TextChanges"/>

			<Entry x:Name="henkiloMaara" Placeholder="Henkilömäärä"/>

			<Entry x:Name="mokinVarustelu" Placeholder="Mökin varustelu"/>


			<Button Text="Lisää mökki" Clicked="Lisaa_Mokki_Clicked"/>
            
            

            <Picker x:Name="mokkiPicker" ItemsSource="{Binding MokkiNames}" />


            <Button Text="Poista mökki" x:Name="poistaMokki" Clicked="poistaMokki_Clicked"/>

			

		


		</VerticalStackLayout>
	</ScrollView>

</ContentPage>



